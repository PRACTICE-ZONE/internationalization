<%= form_with(model: post, :html => {class: "form-horizontal", role: "form"}) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :title %>
    </div>
    <div class="col-sm-6">
    <%= form.text_field :title, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :content %>
    </div>
    <div class="col-sm-6">
    <%= form.text_field :content, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :premium, class: "checkbox-inline input_checkbox" %>
    </div>
    <div class="col-sm-6">
    <%= form.check_box :premium, class: "checkbox" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary btn-lg col-sm-7' %>
  </div>
<% end %>
